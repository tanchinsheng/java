        <actionName>CUSTOM-pdf</actionName>
        <displayName>pdf</displayName>
        <goals>
            <goal>org.codehaus.sonar-plugins.pdf-report:maven-pdfreport-plugin:1.3:generate</goal>
            <goal>-Dsonar.host.url=http://192.168.10.171:9000/sonarqube</goal>
        </goals>
    </action>

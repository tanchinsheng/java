        <displayName>clean install</displayName>
        <goals>
            <goal>org.jacoco:jacoco-maven-plugin:prepare-agent clean install</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-coverage</actionName>
        <displayName>coverage</displayName>
        <goals>
            <goal>org.jacoco:jacoco-maven-plugin:prepare-agent clean install -Pcoverage-per-test</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-sonar</actionName>
        <displayName>sonar</displayName>
        <goals>
            <goal>sonar:sonar</goal>
        </goals>
